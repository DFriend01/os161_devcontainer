{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Workspace",
            "type": "shell",
            "command": "./setup.sh",
            "options": {
                "cwd": "${env:WORKSPACE_DIR}/scripts"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn":[
                "Configure OS Tree",
                "Compile Userland",
                "Configure Kernel",
                "Compile Kernel"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run Kernel",
            "type": "shell",
            "command": "sys161 kernel",
            "options": {
                "cwd": "${env:WORKSPACE_DIR}/os161/root"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure OS Tree",
            "type": "shell",
            "command": "./configure --ostree=${input:tree_path}",
            "options": {
                "cwd": "${env:WORKSPACE_DIR}/os161/src",
            },
            "problemMatcher": [],
        },
        {
            "label": "Compile Userland",
            "command": "bmake && bmake install",
            "type": "shell",
            "options": {
                "cwd": "${env:WORKSPACE_DIR}/os161/src",
            },
            "problemMatcher": [],
        },
        {
            "label": "Configure Kernel",
            "command": "./config ${input:kernel}",
            "type": "shell",
            "options": {
                "cwd": "${env:WORKSPACE_DIR}/os161/src/kern/conf"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Kernel",
            "command": "bmake depend && bmake && bmake install",
            "type": "shell",
            "options": {
                "cwd": "${env:WORKSPACE_DIR}/os161/src/kern/compile/${input:kernel}",
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "tree_path",
            "type": "promptString",
            "description": "Path to source tree",
            "default": "${env:WORKSPACE_DIR}/os161/root"
        },
        {
            "id": "kernel",
            "type": "pickString",
            "description": "Selected kernel to configure",
            "options": [
                "DUMBVM",
                "DUMBVM-OPT",
                "GENERIC",
                "GENERIC-OPT",
                "SYNCHPROBS"
            ]
        }
    ]
}